{% extends 'HexmediaContentBundle::admin.html.twig' %}

{% block title %}Area Creation{% endblock title %}

{% block head_script %}
    {% javascripts filter="?yui_js" output='js/area-edit.js'
    '@HexmediaAdministratorBundle/Resources/public/js/bootstrap-datepicker.js'
    '@HexmediaAdministratorBundle/Resources/public/js/lib/raptor.js'
    '@HexmediaAdministratorBundle/Resources/public/js/raptor-textarea.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block head_style %}
    {% stylesheets filter='assetsurl,less,?yui_css' output='css/adrea-edit.css'
    '@HexmediaAdministratorBundle/Resources/public/css/raptor.css' %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block body -%}
    {{ form_start(form, {'attr' : { 'class' : 'form-horizontal' } }) }}
    <div class="buttons-bar">
        {%  include "HexmediaAdministratorBundle:Form:buttons.html.twig" with {'form' : form, 'exit': 'HexMediaContentArea'} only %}
    </div>
    {{ form_end(form) }}
{% endblock %}
