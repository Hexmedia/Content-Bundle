<div class="main">
    <div class="content">
        <div class="buttons-bar">
            <a href="{{ path("HexMediaContentMediaAdd") }}" class="btn btn-primary"><i class="icon-plus-sign"></i> {{ 'Add'|trans }}</a>
            <a href="{{ path("HexMediaContentMediaMultiple") }}" class="btn btn-primary" data-toggle="modal2"><i class="icon-upload"></i> {{ 'Add many'|trans }}</a>
        </div>
        <div class="data-area-grid">
            <div class="row-fluid data-grid">
                {% for entity in pagination %}
                    <div class="border data-grid-element">
                        <a class="icon-remove remove"
                           href="{{ path("HexMediaContentMediaDelete", {'id': entity.id}) }}" data-toggle="confirm"
                                data-confirm-title="{{ 'Delete file?'|trans }}"
                                data-confirm-body="{{ 'Do you want to delete this media file?' }}"
                                data-confirm-type="ajax" data-confirm-method="post"
                                onclick="return false;"></a>
                        <a class="icon-edit" href="{{ path("HexMediaContentMediaEdit", {'id': entity.id}) }}"></a>

                        <div class="img"><a href="{{ asset(vich_uploader_asset(entity, 'file')|slice(1)) }}" data-toggle="lightbox"><img
                                        src="{{ vich_uploader_asset(entity, 'file')|imagine_filter('attach_admin_square') }}"
                                        alt=""/></a></div>
                        <h5>{{ entity.name }}</h5>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="pagination">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
</div>