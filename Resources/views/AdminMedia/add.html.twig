{% extends 'HexmediaAdministratorBundle:Layout:edit.html.twig' %}

{% block title %}{{ 'Add Media'|trans }}{% endblock %}

{% block body %}

    {{ form_start(form, {'attr' : { 'class' : 'form-horizontal' } }) }}
    <div class="buttons-bar">
        {%  include "HexmediaAdministratorBundle:Form:buttons.html.twig" with {'form' : form, 'exit': 'HexMediaContentMedia'} only %}
    </div>

    <div class="content edit-content data-area-edit">
        <div class="row">
            <div class="col-md-8">
                {{ form_widget(form.file) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <fieldset class="box main-content">
                    <legend>{{ 'Additional Data'|trans }}</legend>
                    <!--									<div class="content-nav">
                                                            <button class="btn btn-info">Add Media</button>

                                                            <ul class="nav nav-tabs">
                                                                <li><a href="#">Text</a></li>
                                                                <li><a href="#">HTML</a></li>
                                                            </ul>
                                                        </div>-->

                    {{ form_row(form.name) }}

                    {{ form_widget(form.description) }}
                </fieldset>
            </div>
            <div class="col-md-4">
                <fieldset class="box">
                    <legend>{{ 'Image View'|trans }}</legend>

                </fieldset>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
