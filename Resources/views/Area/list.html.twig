{% extends "HexmediaContentBundle::admin.html.twig" %}

{% block title %}{% trans %}List of all areas{% endtrans %}{% endblock %}

{% block head_script %}
	{% javascripts output='js/area-list.js'
			'@HexmediaContentBundle/Resources/public/js/area-list.js'
		%}
<script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}

{% block body %}
<div class="content data-area-list">
	<table class="table table-hover" data-bind="table: list, headerTemplate: 'list_table_header', itemTemplate: 'list_table_items'">
	</table>

	<div data-bind="pagination: pagination"></div>
</div>

{% include "HexmediaKnockoutBootstrapBundle:Table:list_table_header.html.twig" with {'addRouteName' : 'HexMediaContentAreaAdd'} %}
{% include "HexmediaKnockoutBootstrapBundle:Table:list_table_items.html.twig" with {'editRouteName' : 'HexMediaContentAreaEdit', 'removeRouteName' : 'HexMediaContentAreaRemove'} %}

{% endblock %}
