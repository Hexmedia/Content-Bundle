{% extends 'HexmediaContentBundle::admin.html.twig' %}

{% block title %}Area Creation{% endblock title %}

{% block head_script %}
	{% javascripts output='js/area-edit.js'
			'@HexmediaContentBundle/Resources/public/js/area-edit.js'
			'@HexmediaAdministratorBundle/Resources/public/js/bootstrap-datepicker.js'
			'@HexmediaAdministratorBundle/Resources/public/js/wysihtml.js'
			'@HexmediaAdministratorBundle/Resources/public/js/bootstrap-wysihtml.js'
		%}
<script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}

{% block head_style %}
		{% stylesheets filter='assetsurl,less,?yui_css' output='css/adrea-edit.css'
			'@HexmediaAdministratorBundle/Resources/public/less/bootstrap-wysihtml.less'
		%}
<link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
		{% endstylesheets %}
{% endblock %}

{% block body -%}
{{ form_start(form, {'attr' : { 'class' : 'form-horizontal' } }) }}
<div class="buttons-bar">
	<button class="btn btn-primary" data-loading-text="{{'Saving...'|trans}}" type="submit" value="save">{{'Save'|trans}}</button>
</div>
{{ form_end(form) }}
{% endblock %}
